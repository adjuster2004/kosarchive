// подзадача ожидания обновления картинки
// waitms correction
$S_CORR = 0
$wd = 0

// цикл ожидания загрузки картинки
WHILE ($wd = 0)
	GETSCREEN
	IF_PIXEL_IN (713, 809, 740, 820, 1381653)
		WAITMS (550)
		LOGWRITE ("Ожидаем загрузку картинки")
	ELSE
		$wd = 1
		LOGWRITE ("Картинка обновилась. Выходим из цикла ожидания")
	END_IF
END_CYC
